{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "build/",
    "removeComments": false,
    "stripInternal": true,
    "target": "es2015",
    "watch": false, // true breaks circleci,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["build/**", "node_modules/**"]
}
